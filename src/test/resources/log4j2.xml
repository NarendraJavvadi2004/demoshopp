<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %c{1} - %msg%n"/>
        </Console>

        <!-- RollingFile appender creates a new log file per run -->
        <RollingFile name="FileLogger"
                     fileName="logs/automation.log"
                     filePattern="logs/automation-%d{yyyy-MM-dd-HH-mm-ss}.log">
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %c{1} - %msg%n"/>
            <Policies>
                <!-- Create a new file every run -->
                <OnStartupTriggeringPolicy/>
                <!-- Optional: also roll if file exceeds 10 MB -->
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>

    </Appenders>

    <Loggers>

        <!-- Silence TestNG internal logs -->
        <Logger name="org.testng" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Logger>

        <!-- Silence Selenium logs -->
        <Logger name="org.openqa.selenium" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Logger>

        <!-- Your framework logs -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>

    </Loggers>

</Configuration>